{
  "name": "antwan/music_collection",
  "license": "MIT",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "antwan",
      "email": "moora@hr.nl"
    }
  ],
  "require": {
    "php": "^8.4",
    "ext-pdo": "*",
    "ext-fileinfo": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^12",
    "friendsofphp/php-cs-fixer": "^v3.87"
  },
  "autoload": {
    "psr-4": {
      "MusicCollection\\": "app/classes"
    },
    "files": [
      "app/config/settings.php"
    ]
  },
  "scripts": {
    "test": "export XDEBUG_MODE=coverage && phpunit --testdox --coverage-text",
    "php-cs-fixer:dry": "export XDEBUG_MODE=off && php-cs-fixer fix --diff --dry-run",
    "php-cs-fixer:fix": "export XDEBUG_MODE=off && php-cs-fixer fix",
    "phpstan": "export XDEBUG_MODE=off && phpstan --memory-limit=256M analyse -c phpstan.neon"
  }
}
